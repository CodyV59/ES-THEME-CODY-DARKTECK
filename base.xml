<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   
<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0.0 0.0</pos>
        <logoAlignment>center</logoAlignment>         
        <size>1.0 1.0</size>
        <logoScale>1.0</logoScale>
        <zIndex>5</zIndex>          
        <logoSize>1.0 1.0</logoSize>
        <color>00000000</color>
        <maxLogoCount>1</maxLogoCount>       
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/red/background.png</path>
      </image>  
      <image name="background_bottom" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>                 
         <path>./_inc/images/red/background_bottom.png</path>
      </image>                   
      <text name="systemInfo">     
         <pos>-0.01 0.775</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
	     <fontSize>0.05</fontSize>
	     <alignment>right</alignment>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>     
         <textColor>101010</textColor>
         <iconColor>101010</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>   
         <textColor>101010</textColor>
         <iconColor>101010</iconColor>
      </helpsystem>
   </view>  

   <view name="basic,detailed,video">
      <textlist name="gamelist">      
         <selectorColor>00000000</selectorColor>
         <selectedColor>FFAE00</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>CCCCCC</secondaryColor>
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./_inc/sounds/Move.wav</scrollSound>
         <zIndex>4</zIndex>                          
      </textlist>
   </view> 
   
   <view name="detailed,video">
      <textlist name="gamelist">                          
         <pos>0.003 0.35</pos>
         <size>1.0 0.4</size>
         <alignment>left</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <textlist name="gamelist">                          
         <pos>0.2 0.19</pos>
         <size>.6 0.74</size>
         <alignment>center</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/red/background_basic.png</path>
         <zIndex>1</zIndex>          
      </image>                
   </view> 
    
   <view name="detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/red/background_basic.png</path>
         <zIndex>1</zIndex>          
      </image> 
      <image name="back2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/red/background_video.png</path>
         <zIndex>3</zIndex>         
      </image> 
      <image name="scanline" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/red/scanline.png</path>
         <zIndex>2</zIndex>         
      </image>  
        <image name="md_marquee">
            <pos>0.50 0.14</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.350 0.250</maxSize>
            <zIndex>6</zIndex>
        </image>              
   </view>     
   
   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.66</pos>
         <maxSize>0.45 0.45</maxSize>
         <zIndex>2</zIndex>         
      </image>      
   </view>

   <view name="video">   
      <video name="md_video">
         <origin>0.0 0.0</origin>
         <pos>0.43 0</pos>
         <maxSize>1.3 1.0</maxSize>
         <delay>1</delay>
         <zIndex>2</zIndex>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>             
   </view>
   
   <view name="detailed,video">
   
      <rating name="md_rating">
         <origin>0.5 0.5</origin>       
         <pos>0.42 0.93</pos>
         <size>0.06 0.06</size>
         <zIndex>4</zIndex>
         <filledPath>./_inc/images/star_full.png</filledPath>
         <unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
      </rating>
      
   </view>
    <view name="menu">
    <menuBackground name="menubg">
      <color>333333</color>
    </menuBackground>
	<menuText name="menutext, menutitle">
      <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
      <fontSize>.039</fontSize>
      <color>ffae00</color>
    </menuText>
    <menuTextEdit name="menutextedit">
      <inactive>./_inc/images/textinput_inactive.png</inactive>
      <active>./_inc/images/textinput_active.png</active>
    </menuTextEdit>
  </view>
  
</theme>
